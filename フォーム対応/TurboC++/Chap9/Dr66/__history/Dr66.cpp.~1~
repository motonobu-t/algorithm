}
//---------------------------------------------------------------------------
/*
 * -------------------------
 *      ‹Rm„—ğ‚Ì–â‘è     *
 * -------------------------
 */

#include "turboform.h"

void backtrack(int,int);

#define N 5

int m[N+4][N+4],                    /* ”Õ–Ê */
    dx[8]={2,1,-1,-2,-2,-1,1,2},    /* ‹Rm‚ÌˆÚ“®‚˜¬•ª */
    dy[8]={1,2,2,1,-1,-2,-2,-1};    /* ‹Rm‚ÌˆÚ“®‚™¬•ª */

void backtrack(int x,int y)
{
    int i,j,k;
    static int count=0,num=0;

    if (m[x][y]==0){
        m[x][y]=++count;         /* –K–â‡”Ô‚Ì‹L˜^ */
        if (count==N*N){
            printf("‰ğ%d\n",++num);    /* ‰ğ‚Ì•\¦ */
            for (i=2;i<=N+1;i++){
                for (j=2;j<=N+1;j++)
                    printf("%4d",m[i][j]);
                printf("\n");
            }
			MessageDlg("Ÿ‚ÌˆÚ“®",mtInformation,TMsgDlgButtons() << mbOK,0);
			cls();
        }
        else
            for (k=0;k<8;k++)           /* i‚ŞˆÊ’u‚ğ‘I‚Ô */
                backtrack(x+dx[k],y+dy[k]);
        m[x][y]=0;                      /* ‚P‚Â‘O‚É–ß‚é */
        count--;
    }
}
void __fastcall TForm1::Button1Click(TObject *Sender)
{
    int i,j;

    for (i=0;i<=N+3;i++)
        for (j=0;j<=N+3;j++)
            if (2<=i && i<=N+1 && 2<=j && j<=N+1)
                m[i][j]=0;      /* ”Õ–Ê */
            else
                m[i][j]=1;      /* •Ç */
	tinit();cls();
	backtrack(2,2);
}
